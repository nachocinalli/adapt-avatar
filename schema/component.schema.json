{
  "$anchor": "avatar-component",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "component"
    },
    "with": {
      "properties": {
        "_supportedLayout": {
          "type": "string",
          "title": "Supported layout",
          "default": "both",
          "enum": ["full-width", "half-width", "both"],
          "_adapt": {
            "editorOnly": true
          }
        },
        "instruction": {
          "type": "string",
          "title": "Instruction",
          "default": "",
          "_adapt": {
            "translatable": true
          }
        },

        "_items": {
          "type": "array",
          "title": "Items",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "title": "Item title",
                "default": "",
                "_adapt": {
                  "translatable": true
                }
              },
              "ariaLabel": {
                "type": "string",
                "title": "Item aria label",
                "default": "",
                "_adapt": {
                  "translatable": true
                }
              },
              "description": {
                "type": "string",
                "title": "Item description",
                "default": "",
                "_adapt": {
                  "translatable": true
                }
              },
              "_pose": {
                "type": "array",
                "title": "Pose",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "title": "Item pose title",
                      "default": "",
                      "_adapt": {
                        "translatable": true
                      }
                    },
                    "ariaLabel": {
                      "type": "string",
                      "title": "Item pose aria label",
                      "default": "",
                      "_adapt": {
                        "translatable": true
                      }
                    },
                    "name": {
                      "type": "string",
                      "title": "Item pose name",
                      "default": "",
                      "_adapt": {
                        "translatable": false
                      }
                    },
                    "_graphic": {
                      "type": "object",
                      "title": "Graphic",
                      "default": {},
                      "properties": {
                        "alt": {
                          "src": {
                            "type": "string",
                            "isObjectId": true,
                            "title": "Source",
                            "description": "",
                            "_backboneForms": {
                              "type": "Asset",
                              "media": "image"
                            }
                          }
                        }
                      }
                    },
                    "_isHidden": {
                      "type": "boolean",
                      "title": "Is hidden",
                      "default": false
                    }
                  }
                }
              },
              "_classes": {
                "type": "string",
                "title": "Custom classes",
                "description": "Custom classes that are applied to the item",
                "default": ""
              }
            }
          }
        }
      }
    }
  }
}
